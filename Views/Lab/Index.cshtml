@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratórios";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum laboratório cadastrado</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Setor</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Nome</td>
                    <td>@lab.Setor</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Lab/Show/@lab.Id">Ver</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Lab/UpdateLab/@lab.Id">Atualizar</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Lab/DeleteLab/@lab.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}