@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratórios";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum laboratório cadastrado</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Setor</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Nome</td>
                    <td>@lab.Setor</td>
                    <td>
                        <a 
                            asp-controller="Lab"
                            asp-action="Show"
                            asp-route-id="@lab.Id"
                            class="btn btn-primary btn-sm">Ver
                        </a>
                    </td>
                    <td>
                        <a 
                            asp-controller="Lab"
                            asp-action="UpdateLab"
                            asp-route-id="@lab.Id"
                            class="btn btn-primary btn-sm">Atualizar
                        </a>
                    </td>
                    <td>
                        <a 
                            asp-controller="Lab"
                            asp-action="DeleteLab"
                            asp-route-id="@lab.Id"
                            class="btn btn-primary btn-sm">Deletar
                        </a>
                    </td>    
                </tr>
            }
        </tbody>
    </table>
}