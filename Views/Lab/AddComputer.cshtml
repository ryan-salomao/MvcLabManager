@model MvcLabManager.Models.Lab

@{
    ViewData["Title"] = "Adicionar Computador ao Laboratório";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form action="AddComputer" method="post">
        <label for="id">Id do Laboratório: </label>
        <input type="text" name="id" id="id" class="form-control" required>

        <label for="computer">Computador: </label>
        <input type="text" name="computer" id="computer" class="form-control" required>

        <button type="submit">Enviar</button>
    </form>
</div>