@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computadores";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ram</th>
                <th>Processor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <td>@computer.Id</td>
                    <td>@computer.Ram</td>
                    <td>@computer.Processor</td>
                    <td>
                        <a 
                            asp-controller="Computer"
                            asp-action="Show"
                            asp-route-id="@computer.Id"
                            class="btn btn-primary btn-sm">Ver
                        </a>
                    </td>
                    <td>
                        <a 
                            asp-controller="Computer"
                            asp-action="UpdateComputer"
                            asp-route-id="@computer.Id"
                            class="btn btn-primary btn-sm">Atualizar
                        </a>
                    </td>
                    <td>
                        <a 
                            asp-controller="Computer"
                            asp-action="DeleteComputer"
                            asp-route-id="@computer.Id"
                            class="btn btn-primary btn-sm">Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}